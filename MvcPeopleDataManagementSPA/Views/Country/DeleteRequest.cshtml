@model CountryViewModel
@{ ViewData["Title"] = "Delete country"; }



@if (Model != null)
{
    if (Model.Country.CityList == null || Model.Country.CityList.Count < 1)
    {
        <h3>Are you sure you want to delete the country?</h3>
        <a asp-action="Delete" asp-controller="Country" asp-route-id="@Model.Country.Id">|Delete|</a>
        <a asp-action="Index" asp-controller="Country">|Back to countries|</a> }
    else
    {
        <h3>Cannot remove Country. It contains city/cities</h3>
        <a asp-action="Index" asp-controller="Country">|Back|</a>}
    }